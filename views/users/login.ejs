<% layout('layouts/boilerplate') -%>

<h1>LOGIN PAGE</h1>

<div class="container">
    <div class="row">
        <div class="col">
            <form action="/users/login" method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input class="form-control" type="text" name="username" id="username" required aria-required>
                </div> 
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" id="password" required aria-required="">
                </div>
                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
    </div>
</div>