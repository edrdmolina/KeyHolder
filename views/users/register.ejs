<% layout('layouts/boilerplate') -%>

<h1>REGISTER PAGE</h1>

<div class="container">
    <div class="row">
        <div class="col">
            <form action="/users/register" method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" required aria-required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" type="email" name="email" id="email" required aria-required>
                </div> 
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" id="password" required aria-required="">
                </div>
                <div class="form-group">
                    <label for="passwordConfirmation">Confirm Password</label>
                    <input class="form-control" type="password" name="passwordConfirmation" id="passwordConfirmation" required aria-required="">
                </div>
                <button class="btn btn-primary" type="submit">Register</button>
            </form>
        </div>
    </div>
</div>